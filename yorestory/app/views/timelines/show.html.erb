<h2 class="timeline_title"><%= @timeline.title %></h2>
<p>
  <%= link_to "edit", "/timelines/#{@timeline.id}/edit" %>
</p>
<p class="timeline_description">
  <%= @timeline.begin_date %> through
  <%= @timeline.end_date %>
</p>
<h3>Timelines</h3>
<%= render partial: "milestones/milestoneform", locals: { milestone_local: @milestone, timeline_id: @timeline.id }%>
<ul class="milestones">
  <% @timeline.milestone.order(id: :desc).each do |milestone| %>
    <li class="milestone">
      <h4><%= milestone.title %></h4>
      <p>
        <%= link_to "show", "/milestone/#{milestone.id}" %> |
        <%= link_to "edit", "/milestones/#{milestone.id}/edit" %>
      </p>
    </li>
  <% end %>
</ul>
